<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table>
  <tr>
    <td>名前</td>
    <td>(姓)</td>
    <td><%= f.text_field :last_name, placeholder: "令和" %></td>
    <td>(名)</td>
    <td><%= f.text_field :first_name, placeholder: "道子" %></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td>(セイ)</td>
    <td><%= f.text_field :last_name_kana, placeholder: "レイワ" %></td>
    <td>(メイ)</td>
    <td><%= f.text_field :first_name_kana, placeholder: "ミチコ" %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td></td>
    <td><%= f.text_field :email, placeholder: "sample@example.com" %></td>
  </tr>
  <tr>
    <td>郵便番号(ハイフンなし)</td>
    <td></td>
    <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td></td>
    <td colspan="3"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "w-100" %></td>
  </tr>
  <tr>
    <td>電話番号(ハイフンなし)</td>
    <td></td>
    <td><%= f.text_field :telephone_number, placeholder: "0000000000" %></td>
  </tr>
  <tr>
    <td>パスワード(6文字以上)</td>
    <td></td>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </td>
  </tr>
  <tr>
    <td>パスワード(確認用)</td>
    <td></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>
  <tr>
    <td></td>
    <td></td>
    <td><%= f.submit "新規登録" %></td>
  </tr>
</table>
<% end %>

<h2>既に登録済みの方</h2>
<p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
