<div class="container-fluid p-5 mb-5">
  <div class="row h5 pb-4">
    <div class="text-center col-auto bg-light offset-sm-2 h-25">新規会員登録</div>
  </div>

  <div class="row pl-5 pb-2">
    <%= form_with model: @customer, url: customer_registration_path, class: "w-100" do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table class="table table-borderless col-sm-7 offset-sm-1">
      <tr>
        <td style="width:40%">名前</td>
        <td class="pr-0" style="width:10%">(姓)</td>
        <td class="pl-0" style="border-collapse:collapse width:20%"><%= f.text_field :last_name, placeholder: "令和" %></td>
        <td class="pr-0" style="width:10%">(名)</td>
        <td class="pl-0" style="border-collapse:collapse width:20%"><%= f.text_field :first_name, placeholder: "道子" %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td class="pr-0">(セイ)</td>
        <td class="pl-0"><%= f.text_field :last_name_kana, placeholder: "レイワ" %></td>
        <td class="pr-0">(メイ)</td>
        <td class="pl-0"><%= f.text_field :first_name_kana, placeholder: "ミチコ" %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td></td>
        <td class="pl-0"><%= f.text_field :email, placeholder: "sample@example.com" %></td>
      </tr>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td></td>
        <td class="pl-0"><%= f.text_field :postal_code, placeholder: "0000000" %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td></td>
        <td class="pl-0" colspan="3"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "w-100" %></td>
      </tr>
      <tr>
        <td>電話番号(ハイフンなし)</td>
        <td></td>
        <td class="pl-0"><%= f.text_field :telephone_number, placeholder: "0000000000" %></td>
      </tr>
      <tr>
        <td>パスワード(6文字以上)</td>
        <td></td>
        <td class="pl-0"><%= f.password_field :password, autocomplete: "new-password" %></td>
        </td>
      </tr>
      <tr>
        <td>パスワード(確認用)</td>
        <td></td>
        <td class="pl-0"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td class="pl-0"><%= f.submit "新規登録", class: "w-75 btn btn-success btn-sm" %></td>
      </tr>
    </table>
    <% end %>
  </div>
  <div class="row pb-1">
    <div class="h5 text-center col-auto bg-light offset-sm-2 h-25">既に登録済みの方</div>
  </div>
  <div class="row ml-3">
    <span class="col-auto offset-sm-2"><%= link_to "こちら", new_customer_session_path %>からログインしてください。</span>
  </div>
</div>