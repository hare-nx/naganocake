<h1>注文情報確認</h1>

  <% @cart_items.each do |cart_item| %>
    <table>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
      <tr>
        <td>
          <%= image_tag cart_item.item.get_image_id, size: "100x60" %><%= cart_item.item.name %>
        </td>
        <td>
          <%= cart_item.item.with_tax_price.to_s(:delimited) %>
        </td>
        <td>
          <%= cart_item.amount %>
        </td>
        <td>
          <%= cart_item.subtotal.to_s(:delimited) %>
        </td>
      </tr>
    </table>
    <% @total += cart_item.subtotal %>
  <% end %>


    <table>
      <%=form_with model: @order, url: orders_path do |f| %>
      <tr>
        <th>送料</th>
        <td>
          <%= f.hidden_field :postage, :value => 800 %>
          800
        </td>
      </tr>
      <tr>
        <th>商品合計</th>
        <td><%= @total.to_s(:delimited) %></td>
      </tr>
      <tr>
        <th>請求金額</th>
        <td>
          <%= f.hidden_field :total_price, :value => @total+800 %>
          <%= (@total+800).to_s(:delimited) %>
        </td>
      </tr>

    </table>


  <h4>支払方法</h4>
  <%= f.hidden_field :payment, :value => params[:order][:payment] %>
  <%= Order.payments_i18n[@order.payment] %>

  <h4>お届け先</h4>
  <%= f.hidden_field :postal_code, :value => @order.postal_code %>
  <%= f.hidden_field :address, :value => @order.address %>
  <%= f.hidden_field :name, :value => @order.name %>
  <p>
    〒<%= @order.postal_code.insert(3, "-") %> <%= @order.address %><br>
    <%= @order.name %>
  </p>

  <%= f.submit "注文を確定する" %>

<% end %>