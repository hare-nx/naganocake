<h1>注文情報入力</h1>
<%= form_with model: @order do |f| %>
<h3>支払方法</h3>
  <%= f.radio_button :payment, Order.payments.key(0) %>
  <%= f.label :payment, Order.payments_i18n[:credit] %>
  <%= f. radio_button :payment, Order.payments.key(1) %>
  <%= f.label :payment, Order.payments_i18n[:bank] %>

<h3>お届け先</h3>
  <%= f.radio_button :address, Order %>
  <%= f.label :address, "ご自身の住所" %>
  <p>〒<%= @order.postal_code.insert(3, "-") %> <%= @order.address %><br>
  <p><%= @order.name %></p>

  <%= f.radio_button :address, Order %>
  <%= f.label :address, "登録済住所から選択" %>
  <%= f.select :address, options_from_collection_for_select(Address.all, :id, :address_display) %>

  <%= f.radio_button :address, @address %>
  <%= f.label "郵便番号(ハイフンなし)" %>
  <%= f.text_field :postal_code %>
  <%= f.label "住所" %>
  <%= f.text_field :address %>
  <%= f.label "宛名" %>
  <%= f.text_field :name %>
  <%= f.submit "確認画面へ進む" %>
<% end %>
