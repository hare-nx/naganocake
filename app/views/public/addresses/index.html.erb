<h1>配送先登録/一覧</h1>

<%= form_with model: @address do |f| %>
<table class="table table-borderless">
  <tr>
    <td>郵便番号(ハイフンなし)</td>
    <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td colspan="2"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
  </tr>
  <tr>
    <td>宛名</td>
    <td><%= f.text_field :name, placeholder: "令和道子" %></td>
    <td></td>
    <td><%= f.submit "新規登録" %></td>
  </tr>
</table>
<% end %>
<table class="table">
  <tr>
    <thead class="thead-light">
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td></td>
    </thead>
  </tr>
  <% @addresses.each do |address| %>
  <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td><%= link_to "編集する", edit_address_path(address.id) %><%= link_to "削除する", address_path(address.id), method: :delete %></td>
  </tr>
  <% end %>
</table>