<div class="container-fluid p-5">
  <div class="row h5 pb-4">
    <div class="text-center col-auto bg-light offset-sm-2 h-25">配送先登録/一覧</div>
  </div>
  <div class="row mb-5">
    <%= form_with model: @address, class: "w-100" do |f| %>
    <table class="table table-borderless col-sm-9 offset-sm-1">
      <tr>
        <td class="pr-0" style="width:25%">郵便番号(ハイフンなし)</td>
        <td style="width:25%"><%= f.text_field :postal_code, placeholder: "0000000" %></td>
        <td style="width:35%"></td>
        <td style="width:15%"></td>
      </tr>
      <tr>
        <td>住所</td>
        <td class="pr-0" colspan="2"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "w-100" %></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name, placeholder: "令和道子" %></td>
        <td></td>
        <td class="px-0"><%= f.submit "新規登録", class: "btn btn-success w-100 btn-sm" %></td>
      </tr>
    </table>
    <% end %>
  </div>
  <div class="row mb-3">
    <table class="table table-bordered col-sm-8 offset-sm-1">
      <tr>
        <thead class="thead-light">
          <th class="font-weight-normal" style="width:15%">郵便番号</th>
          <th class="font-weight-normal" style="width:40%">住所</th>
          <th class="font-weight-normal" style="width:15%">宛名</th>
          <th class="font-weight-normal" style="width:30%"></th>
        </thead>
      </tr>
      <% @addresses.each do |address| %>
      <tr>
        <td class="align-middle"><%= address.postal_code %></td>
        <td class="align-middle"><%= address.address %></td>
        <td class="align-middle"><%= address.name %></td>
        <td class="text-center"><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success btn-sm mr-2" %><%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger btn-sm ml-2" %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>