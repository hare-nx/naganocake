<div class="container-fluid p-5 mb-5">
  <div class="row h5 pb-4">
    <div class="text-center col-auto bg-light offset-sm-2 h-25">ログイン</div>
  </div>
  <div class="row h6 pb-4 ml-2">
    <div class="text-center col-auto bg-light offset-sm-2">会員の方はこちらからログイン</div>
  </div>

  <%= form_with model: @customer, url: customer_session_path do |f| %>
  <div class="field row justify-content-center mb-2">
    <div class="col-sm-2">
      <%= f.label :email, "メールアドレス" %>
    </div>
    <div class="col-sm-4 w-100">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "w-75" %>
    </div>
  </div>

  <div class="field row justify-content-center mb-4">
    <div class="col-sm-2">
      <%= f.label :password, "パスワード" %>
    </div>
    <div class="col-sm-4">
      <%= f.password_field :password, autocomplete: "current-password", class: "w-75" %>
    </div>
  </div>


  <div class="actions field row justify-content-center mb-5">
    <div class="col-sm-4 offset-sm-2">
      <%= f.submit "ログイン", class: "btn btn-primary w-25 btn-sm" %>
    </div>
  </div>

  <% end %>

  <div class="row h6 pb-4 ml-2">
    <div class="text-center col-auto bg-light offset-sm-2">会員登録がお済みでない方</div>
  </div>
  <div class="row ml-4">
    <span class="col-auto offset-sm-3"><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。</span>
  </div>
</div>