<div class="container py-5">
  <div class="row d-md-flex flex-md-nowrap">
    <div class="col-md-3 mb-5">
    <%= render 'public/items/genre', genres: @genres %>
    </div>

    <div class="col-sm-auto flex-sm-fill ml-3 col-11 p-0">
      <div class="row mb-4">
        <div class="col-auto h3">商品一覧</div>
        <div class="col-auto align-self-center pl-0">(全<%= Item.all.count %>件)</div>
      </div>
      <div class="row no-gutters justify-content-between">
        <% @items.each do |item| %>
          <%= link_to item_path(item.id), class: "text-dark" do %>
            <div class="col-auto px-0 mb-4">
              <div class="row no-gutters"><%= image_tag item.get_image_id, size: "200x130", style: "object-fit:cover" %></div>
              <div class="row no-gutters mt-2"><%= item.name %></div>
              <div class="row no-gutters">￥<%= item.price.to_s(:delimited) %></div>
            </div>
          <% end %>
        <% end %>
        <div style="width:200px;"></div>
      </div>
      <div class="row justify-content-center"><%= paginate @items %></div>
    </div>
  </div>
</div>
