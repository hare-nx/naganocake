<div class="container-fluid p-5 mb-5">
  <div class="row h5 pb-4">
    <div class="text-center col-auto bg-light offset-sm-2 h-25">ジャンル編集</div>
  </div>
  <%= form_with model: @genre, url: admin_genre_path(@genre), class: "ml-5" do |f| %>
  <div class="row ml-5 mt-4 mb-5 align-items-center">
    <div class="col-sm-auto"><%= f.label "ジャンル名" %></div>
    <div class="col-sm-3"><%= f.text_field :name, class: "w-100" %></div>
    <div class="col-sm-2"><%= f.submit "変更保存", class: "btn btn-success" %></div>
  </div>
  <% end %>
</div>