<h1>注文履歴詳細</h1>
<table>
  <tr>
    <th>購入者</th>
    <td>
      <%# <%= link_to admin_orders_path do %>
      <%= @order.user.last_name %>
      <%# end %>
    </td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.order_detail.created_at.strftime("%Y/%m/%d") %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td><%= @order.postal_code.insert(3, "-") %> <%= @order.address %></td>
  </tr>
  <tr>
    <th></th>
    <td><%= @order.name %></td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment %></td>
  </tr>
  <tr>
    <th>注文ステータス</th>
    <%= form_with model: @order, url: admin_order_path(@order) do |f| %>
      <td><%= f.select :status, Order.status.keys, {} %></td>
      <td><%= f.submit "更新" %></td>
    <% end %>
  </tr>
</table>
<table>
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th>製作ステータス</th>
    <th></th>
  </tr>
  <tr>
    <% @order_details.each do |order_detail| %>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.item.with_tax_price %></td>
    <td><%= order_detail.amount %></td>
    <td><%= order_detail.item.cart_item.subtotal %></td>
      <%= form_with model: order_detail, url: admin_order_order_detail_path(order_detail.id) do |f| %>
        <td><%= f.select :status, OrderDetail.status.keys, {} %></td>
        <td><%= f.submit "更新" %></td>
      <% end %>
    <% end %>
  </tr>
</table>
