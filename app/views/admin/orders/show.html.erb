<h1>注文履歴詳細</h1>
<table>
  <tr>
    <th>購入者</th>
    <td>
      <%# <%= link_to admin_orders_path do %>
      <%= @order.customer.last_name %><%= @order.customer.first_name %>
      <%# end %>
    </td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>〒<%= @order.postal_code.insert(3, "-") %> <%= @order.address %></td>
  </tr>
  <tr>
    <th></th>
    <td><%= @order.name %></td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_i18n %></td>
  </tr>
  <tr>
    <th>注文ステータス</th>
    <%= form_with model: @order, url: admin_order_path(@order) do |f| %>
      <td><%= f.select :status, Order.statuses_i18n.invert,{} %></td>
      <td><%= f.submit "更新" %></td>
    <% end %>
  </tr>
</table>
<table>
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th>製作ステータス</th>
    <th></th>
  </tr>
  <% @order_details.each do |order_detail| %>
  <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.item.with_tax_price %></td>
    <td><%= order_detail.amount %></td>
    <td><%= order_detail.subtotal %></td>
    <td>
      <%= form_with model: order_detail, url: admin_order_order_detail_path(@order.id, order_detail.id) do |f| %>
        <%= f.select :status, OrderDetail.statuses_i18n.invert, {} %>
        <%= f.submit "更新" %>
      <% end %>
    </td>
  </tr>
  <% @total+=order_detail.subtotal %>
  <% end %>
</table>

<table>
  <tr>
    <th>商品合計</th>
    <td><%= @total %></td>
  </tr>
  <tr>
    <th>送料</th>
    <td><%= @order.postage %></td>
  </tr>
  <tr>
    <th>請求金額合計</th>
    <td><%= @order.total_price %></td>
  </tr>
</table>