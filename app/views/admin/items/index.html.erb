<div class="container-fluid p-5">
  <div class="row h5 pb-4">
    <div class="text-center col-auto bg-light offset-sm-2 h-25">商品一覧</div>
    <div class="col-1 ml-auto mr-5">
      <%= link_to new_admin_item_path, class:"btn rounded-circle shadow-sm mr-5" do %>
        <i class="fa-solid fa-plus" style="color:gray;"></i>
      <% end %>
    </div>
    <div class="col-1"></div>
  </div>

  <div clas="row">
    <table class="table table-borderless col-8 mx-auto">
      <tr>
        <thead class="thead-light">
          <th style="width:15%">商品ID</th>
          <th style="width:30%">商品名</th>
          <th style="width:15%">税抜価格</th>
          <th style="width:25%">ジャンル</th>
          <th style="width:15%">ステータス</th>
        </thead>
      </tr>
      <% @items.each do |item| %>
      <tr>
        <tbody>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id), class: "text-dark", style: "text-decoration: underline" do %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <% if item.is_active==true %>
            <td class="text-success font-weight-bold">販売中</td>
          <% else %>
            <td class="text-secondary font-weight-bold">販売停止中</td>
          <% end %>
        </tbody>
      </tr>
      <% end %>
    </table>
  </div>
  <div class="row justify-content-center"><%= paginate @items %></div>
</div>