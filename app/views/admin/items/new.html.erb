<h1>商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path do |f| %>
  <%= f.label "商品画像" %>
  <%= f.file_field :image_id, accept: "image/*" %><br>

  <%= f.label "商品名" %>
  <%= f.text_field :name, placeholder: "商品名" %><br>

  <%= f.label "商品説明" %>
  <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %><br>

  <%= f.label "ジャンル" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>

  <%= f.label "税抜価格" %>
  <%= f.text_field :price, placeholder: "1000" %>円<br>

  <%= f.label "販売ステータス" %>
  <%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "販売中", value: true, :checked => true %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "販売停止中", value: false %><br>

  <%= f.submit "新規登録" %>
<% end %>

