<div class="container-fluid p-5">
  <div class="row h5 pb-4">
    <div class="text-center col-auto bg-light offset-sm-2 h-25">商品詳細</div>
  </div>
  <div class="row mt-5">
    <div class="col-sm-4 offset-sm-1 col-11 mb-2">
      <%= image_tag @item.image_id, class: "w-100 h-auto" %>
    </div>
    <div class="col-sm-5 col-11">
      <table class="table table-borderless">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <td class="align-middle"><%= @item.with_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <% if @item.is_active==true %>
            <td class="text-success font-weight-bold">販売中</td>
          <% else %>
            <td class="text-secondary font-weight-bold">販売停止中</td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
  </div>
</div>