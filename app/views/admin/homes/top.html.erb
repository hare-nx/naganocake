<div class="container-fluid p-5">
  <div class="row h5 pb-4">
    <div class="text-center col-auto bg-light offset-sm-2 h-25">注文履歴一覧</div>
  </div>
  <div clas="row">
    <table class="table col-sm-8 mx-auto">
      <tr>
        <thead class="thead-light">
          <th style="width:25%">購入日時</th>
          <th style="width:30%">購入者</th>
          <th style="width:20%">注文個数</th>
          <th style="width:25%">注文ステータス</th>
        </thead>
      </tr>
      <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_order_path(order.id), class: "text-dark", style: "text-decoration: underline" do %>
            <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
          <% end %>
        </td>
        <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
        <td><%= order.total_amount %></td>
        <td><%= order.status_i18n %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class="row justify-content-center"><%= paginate @orders %></div>
</div>